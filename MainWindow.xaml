<Window x:Class="WPFTuts.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="Cols N Rows -  WPF Training" Height="350" Width="650"
    Icon="C:\Users\stibi\github\CRacing\iconpack\favicon.ico"
    ResizeMode="NoResize"
    ShowInTaskbar="True"
    FontFamily="Arial Nova"    
    FontSize="22"
    Background="{DynamicResource WindowBackgroundBrush}"
        >
    <Window.Resources>
        <sys:String x:Key="strJanir">Janir Racing Login</sys:String>


        <sys:String x:Key="cbTitle">Type:</sys:String>


        <x:Array x:Key="comboBoxItems" Type="sys:String">
            <sys:String>Rush</sys:String>
            <sys:String>Panorama</sys:String>
            <sys:String>Curves</sys:String>
        </x:Array>

        <LinearGradientBrush x:Key="WindowBackgroundBrush">
            <GradientStop Offset="0" Color="BlueViolet"/>
            <GradientStop Offset="1" Color="WhiteSmoke"/>
        </LinearGradientBrush>

    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- "margin" = 10px -->
            <!-- 0-based grid/col index -->
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        
        <!-- ROW 1 -->
        <TextBlock Name="textPanel" MouseUp="text_mouseUp" Padding="7" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" TextAlignment="Center" Background="#FFF7D67C">
            EVENT C1 R1
        </TextBlock>
        <TextBlock Padding="7"  Grid.Column="3" Grid.Row="1" TextAlignment="Center" Background="#FF5BDAFF">
            Block C3 R1
        </TextBlock>
        <TextBlock Padding="7" Grid.Column="4" Grid.Row="1" TextAlignment="Center" Background="#FFFF7979">
            Block C4 R1
        </TextBlock>


        <!-- ROW 2 -->
        <TextBlock Padding="2,0" Name="textPanel2" MouseUp="textPanel2_MouseUp"  Grid.Column="1" Grid.Row="2" TextAlignment="Center" Background="#FFF7D67C">
            DISPLAY MSG
        </TextBlock>
        <TextBlock Grid.Column="2"  Grid.Row="2" TextAlignment="Center" Background="#FF7CFF76">
            Block C2 R2
        </TextBlock>
        <TextBlock Grid.Column="3"  Grid.Row="2" TextAlignment="Center" Background="#FF5BDAFF">
            Block C3 R2
        </TextBlock>
        <TextBlock Grid.Column="4" Grid.Row="2" TextAlignment="Center" Background="#FFFF7979" Foreground="Black">
            Block C4 R2
        </TextBlock>

        <!-- ROW 3 -->
        <TextBlock Grid.Column="1" Grid.Row="3"  TextAlignment="Center" Background="#FFF7D67C">
            Block C1 R2
        </TextBlock>
        <TextBlock Grid.Column="2" Grid.Row="3" TextAlignment="Center" Background="#FF7CFF76">
            Block C2 R2
        </TextBlock>
        <TextBlock Grid.Column="3" Grid.Row="3" TextAlignment="Center" Background="#FF5BDAFF">
            Block C3 R2
        </TextBlock>
        <TextBlock Grid.Column="4" Grid.Row="3" TextAlignment="Center" Background="#FFFF7979" Foreground="Black">
            Block C4 R2
        </TextBlock>

        <!-- ROW 4 -->

        <TextBlock Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" FontSize="35" Text="{StaticResource strJanir}" />
        <TextBox x:Name="userName"  Grid.Column="4" Grid.Row="4" Margin="10" Grid.ColumnSpan="2" />
        
          <!-- ROW 5 -->
        <Button Content="Log In" Grid.Column="1" Grid.Row="5" x:Name="loginButton" Click="loginButton_Click" />
    
        <!-- ROW 6-->

        <StackPanel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" >
            <Label Content="{StaticResource cbTitle}"/>
            <ComboBox ItemsSource="{StaticResource comboBoxItems}"/>
        </StackPanel>



    </Grid> 
</Window>